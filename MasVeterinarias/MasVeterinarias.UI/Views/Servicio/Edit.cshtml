@model MasVeterinarias.UI.Models.Servicio

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutV";
}

<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Mi Veterinaria

    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html">Servicios</a>
        </li>
        <li class="breadcrumb-item active">Editar</li>
    </ol>

    <!-- Content Row -->
    <div class="row">
        <!-- Sidebar Column -->
        <div class="col-lg-3 mb-4">
            <div class="list-group">
                <a href="index.html" class="list-group-item">Detalles del Negocio</a>
                <a href="about.html" class="list-group-item">Personal</a>
                <a href="services.html" class="list-group-item">Categorias</a>
                <a href="contact.html" class="list-group-item active">Servicios</a>
                <a href="portfolio-1-col.html" class="list-group-item">Productos</a>
                <a href="portfolio-2-col.html" class="list-group-item">Citas</a>

            </div>
        </div>
        <!-- Content Column -->
        <div class="col-lg-9 mb-4">
            <h3>Editar Servicio</h3>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control-plaintext" readonly/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <input asp-for="CategoriaId" type="number" class="form-control"  required data-validation-required-message="Porfavor Esciba la Categoria.">
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Disponibilidad" class="control-label"></label>
                    <select asp-for="Disponibilidad" type="text" class="form-control" required data-validation-required-message="Por favor escoja la Disponibilidad.">
                        <option>Disponible</option>
                        <option>No Disponible</option>
                    </select>
                    <span asp-validation-for="Disponibilidad" class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <label asp-for="Detalles" class="control-label"></label>
                    <input asp-for="Detalles" class="form-control" required data-validation-required-message="Por favor escoja la Disponibilidad.">
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" type="number" class="form-control" required data-validation-required-message="Porfavor escriba un Precio."/>
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Especie" class="control-label"></label>
                    <input asp-for="Especie" class="form-control" required data-validation-required-message=" Porfavor escriba una Especie."/>
                    <span asp-validation-for="Especie" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" required data-validation-required-message="Porfavor escriba un nombre."/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" required data-validation-required-message="Porfavor escriba una Descripcion."/>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Raza" class="control-label"></label>
                    <input asp-for="Raza" class="form-control" required data-validation-required-message="Porfavor escriba uan Raza."/>
                    <span asp-validation-for="Raza" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Regresar a la Lista</a>
            </div>
        </div>
    </div>
    <!-- /.row -->

</div>



