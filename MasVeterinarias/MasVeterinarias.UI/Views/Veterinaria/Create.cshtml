@model MasVeterinarias.UI.Models.Veterinaria

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutVregister";

}

<div class="container-xl">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="contact-form">
                    <h1>¡Anunciate!</h1>
                    <p class="hint-text">Complata el registro para comenzar a anunciarte como nunca antes.</p>
                    <form action="/examples/actions/confirmation.php" method="post">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Escribe el Nombre">Nombre del Negocio</label>
                                    <input asp-for="Nombre" type="text" class="form-control" id="inputFirstName" required>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group-prepend">
                                    <label for="Escribe el Nombre">Logotipo</label>
                                </div>
                                <div class="custom-file">
                                    <input asp-for="Imagen" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01"></label>
                                    <span asp-validation-for="Imagen" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Escribe el Nombre">Representante</label>
                                    <input asp-for="Representante" type="text" class="form-control" id="inputFirstName" required>
                                    <span asp-validation-for="Representante" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="inputLastName">Telefono</label>
                                    <input asp-for="Telefono" type="text" class="form-control" id="inputLastName" required>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail">Direccion</label>
                            <input asp-for="Direccion" type="text" class="form-control" id="inputAdress" required>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group md-form md-outline">
                                    <label for="default-picker">Hora de Apertura</label>
                                    <input asp-for="HoraApertura" type="time" class="form-control" id="default-picker" required>
                                    <span asp-validation-for="HoraApertura" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group md-form md-outline">
                                    <label for="default-picker">Hora de Cierre</label>
                                    <input asp-for="HoraCierre" type="time" class="form-control" id="default-picker" required>
                                    <span asp-validation-for="HoraCierre" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputLastName">Dias Laborales</label>
                            <select class="custom-select " asp-for="DiasLaborales" multiple>
                                <option value="Lunes">Lunes</option>
                                <option value="Martes">Martes</option>
                                <option value="Miercoles">Miercoles</option>
                            </select>
                            <span asp-validation-for="DiasLaborales" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="inputMessage">Descripcion</label>
                            <textarea asp-for="Descripcion" class="form-control" id="inputMessage" rows="5" required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </form>
                </div>
            </div>
        </div>
    }


</div>

